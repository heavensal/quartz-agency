<section class="max-w-6xl mx-auto mt-10 bg-transparent">
  <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Notre Blog</h1>

  <% @articles.each do |article| %>
    <div class="mt-8 p-5 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
      <h2 class="text-2xl font-semibold text-gray-700 hover:text-gray-900">
        <%= link_to article.title, article %>
      </h2>
      <p class="text-gray-500 text-sm"><%= article.published_at.strftime("%d %B %Y") %></p>
      <p class="text-gray-600 mt-2"><%= article.summary %></p>
    </div>
  <% end %>
</section>
