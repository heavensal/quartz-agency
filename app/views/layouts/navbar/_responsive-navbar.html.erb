<%# NAVBAR %>

<%# hyper ui %>
<header class="bg-gray-100 bg-opacity-20 backdrop-filter backdrop-blur-sm border border-opacity-30 shadow-xl sticky top-0 z-40">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex-1 md:flex md:items-center md:gap-12">

        <%= link_to root_path, class: "flex justify-center gap-2 items-center inline-block hover:scale-105 duration-150" do %>
          <%= image_tag "quartz-agency-logo.webp", alt: "Logo", class: "h-8" %>
          <span class="text-dark hidden md:inline">Quartz Agency</span>
        <% end %>

      </div>

      <div class="md:flex md:items-center md:gap-12">
        <nav aria-label="Global" class="hidden md:block">
          <ul class="flex items-center gap-6 text-sm text-dark">

            <li>
              <%= link_to 'Blog', articles_path, class: 'inline-block hover:scale-105 duration-150' %>
            </li>

            <li data-controller="dialog" data-action="click->dialog#backdropClose">

              <dialog data-dialog-target="dialog" class="py-4 px-4 rounded-lg bg-white border-r-2 border-b-2 border-blue">

                <h2 class="text-2xl text-blue my-4">
                  Nous Contacter
                </h2>
                <%= render 'pages/contact-form' %>

              </dialog>

              <button type="button" data-action="dialog#open" class="inline-block hover:scale-105 duration-150">
                Nous Contacter
              </button>

            </li>

            <% if current_admin %>
              <li>
                <%# ADMIN %>
                <%= link_to 'Ecrire un Article', new_admin_article_path, class: 'inline-block hover:scale-105 duration-150' %>
              </li>

              <li>
                <%# ADMIN %>
                <%= link_to 'Se Déconnecter',  destroy_admin_session_path, data: { turbo_method: :delete, turbo_confirm: "Confirmer la déconnexion ?" }, class: 'inline-block hover:scale-105 duration-150' %>
              </li>
            <% end %>

          </ul>
        </nav>


        <%# Button de menu sur téléphone %>
        <div class="flex items-center mr-4">

          <div class="block md:hidden">

            <button class="p-2 text-dark transition hover:text-black" data-action="click->navbar--offcanva-menu#open">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>

          </div>

        </div>


      </div>

    </div>
  </div>




</header>
