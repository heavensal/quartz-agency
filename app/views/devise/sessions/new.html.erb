<div class="login w-5/6 md:w-1/2 lg:w-1/3 mx-auto my-12">

  <section class="head-of-login">

    <h1 class="text-4xl font-bold text-dark mb-8 text-center">
      Connexion de l'Admin
    </h1>

  </section>

  <section class="p-8 bg-white shadow-md rounded-lg">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>

      <div class="my-4">
        <%= f.label :email, class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <div class="my-4">
        <%= f.label :password,  "Mot de passe", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="my-4">
          <%= f.check_box :remember_me, class: "size-4 rounded border-gray-300 mr-1" %>
          <%= f.label :remember_me, "Enregistrer mes identifiants"  %>
        </div>
      <% end %>

      <div class="actions flex justify-center">
        <%= f.submit "Se Connecter", class: "px-4 py-2 rounded bg-yellow text-blue border-b-2 border-r-2 border-blue transition inline-block cursor-pointer hover:duration-150 hover:bg-blue hover:text-yellow hover:border-yellow hover:scale-105 inline-block" %>
      </div>

    <% end %>

  </section>
