<%# HERO %>

  <section class="hero relative w-full h-screen" data-controller="scroll-reveal">


    <div class="video">

      <%= video_tag "intro.mp4",
      class: "h-screen w-full object-cover object-center reveal",
      loop: "true",
      autoplay: "true",
      muted: "true",
      data: {
        scroll_reveal_target: "item"
      } %>

      <div class="absolute top-0 left-0 w-full h-screen bg-dark opacity-70"></div>

    </div>

    <header class="navbar z-10 absolute top-0 w-full py-8 px-20">
      <nav>

        <ul class="flex justify-start items-center space-x-8 text-2xl text-white">
          <li>
            <%= link_to 'Blog', articles_path, class: 'px-4 inline-block hover:scale-125 duration-150' %>
          </li>
        </ul>

      </nav>
    </header>

    <div class="hero-content absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center w-11/12 md:w-full">

      <div class="logo mb-4">
        <%= image_tag "quartz-agency-logo.webp", alt: "Logo", class: "h-20 w-auto mx-auto" %>
      </div>
      <h1 class="text-white text-6xl mb-8">Quartz Agency</h1>
      <p class="text-slate-100 text-2xl">Votre agence de communication digitale</p>

      <div class="mt-16">
        <%= render 'contacts/contact-main-btn' %>
      </div>

    </div>


  </section>



