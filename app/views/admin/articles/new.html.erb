<div class="the-article w-4/6 mx-auto my-12">

  <section class="head-of-article">

    <h1 class="text-4xl font-bold text-dark mb-8 text-center">
      Nouvel Article
    </h1>

  </section>

  <section class="p-8 bg-white shadow-md rounded-lg">
    <%= form_for [:admin, @article], local: true, class: "space-y-4" do |form| %>

      <div class="my-4">
        <%= form.label :title, "Titre de l'article", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, autofocus: "true", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <div class="my-4">
        <%= form.label :published_at, "Date de publication", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.datetime_field :published_at, value: Date.current, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <div class="my-4">
        <%= form.label :summary, "Résumé", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.text_area :summary, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <div class="my-4">
        <%= form.label :content, "Contenu", class: "mb-2 block text-sm font-medium text-gray-700" %>
        <%= form.rich_text_area :content, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm transition focus:duration-150 focus:outline-none focus:ring-blue focus:border-blue sm:text-sm" %>
      </div>

      <div class="flex justify-center gap-4">

        <%= link_to 'Annuler', articles_path, class: "px-4 py-2 rounded border-2 bg-transparent border-gray-500 text-gray-500 transition hover:duration-150 hover:bg-gray-500 hover:text-white" %>

        <%= form.submit "Publier l'Article", class: "px-4 py-2 rounded bg-yellow text-blue border-b-2 border-r-2 border-blue transition inline-block cursor-pointer hover:duration-150 hover:bg-blue hover:text-yellow hover:border-yellow hover:scale-105 inline-block" %>
      </div>

    <% end %>
  </section>



</div>
