<h1 class="my-3 text-center">Modifier l'article</h1>

<section class="max-w-4xl mx-auto p-5 bg-white shadow-md rounded-lg">
  <%= form_for [:admin, @article], local: true, class: "space-y-4" do |form| %>

    <div>
      <%= form.label :title, "Titre de l'article", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :published_at, "Date de publication", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_field :published_at, value: Date.current, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :summary, "Résumé", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :summary, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :content, "Contenu", class: "block text-sm font-medium text-gray-700" %>
      <%= form.rich_text_area :content, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.submit "Publier l'Article", class: "px-4 py-2 rounded bg-yellow text-blue border-b-2 border-r-2 border-blue transition cursor-pointer hover:duration-150 hover:bg-blue hover:text-yellow hover:border-yellow hover:scale-105 inline-block" %>
    </div>

  <% end %>
</section>
